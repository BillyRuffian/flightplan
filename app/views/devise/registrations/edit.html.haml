- content_for :section do
  %h1 Edit Profile

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .mb-3
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"

  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}

  .mb-3
    = f.label :password
    = f.password_field :password, autocomplete: "new-password", class: "form-control"
    .form-text.text-muted
      leave blank if you don't want to change it
      - if @minimum_password_length
        &mdash;
        =@minimum_password_length
        characters minimum

  .mb-3
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"

  .mb-2
    = f.label :current_password
    = f.password_field :current_password, autocomplete: "current-password", class: "form-control"
    .form-text.text-muted we need your current password to confirm your changes

  .mb-2
    = f.submit "Update", class: "btn btn-primary"

%hr/

%h3 Cancel my account
.mb-2 Unhappy?
.mb-2= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"
