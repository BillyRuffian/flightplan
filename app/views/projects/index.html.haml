- content_for :section do
  %h1 Listing projects

%table.table
  %thead
    %tr
      %th Name
      %th Description
      %th Dates
      %th
 
  %tbody.table-group-divider
    - @projects.each do |project|
      %tr
        %td= link_to project.name, project
        %td= project.description
        %td
          = project.start_date.to_fs(:long) 
          &mdash;
          = project.end_date.to_fs(:long)
        %td
          = link_to edit_project_path(project), class: 'btn btn-outline-primary btn-sm me-2' do   
            %i.bi-pencil
          = link_to project, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' do 
            %i.bi-trash

%br

= link_to 'New Project', new_project_path
