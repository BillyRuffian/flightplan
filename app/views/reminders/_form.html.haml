- content_for :section do
  - if @reminder.new_record?
    New reminder for #{@project.name}
  - else
    Edit Reminder for #{@project.name}

= form_for [@project, @reminder] do |f|
  - if @reminder.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reminder.errors.count, "error")} prohibited this reminder from being saved:"
      %ul
        - @reminder.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :start_date
    = f.date_field :start_date
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
